<h2 class="text-center text-primary">Add a New Piece</h2>

<!-- TODO: Add a form for making a new piece. Should post to /pieces -->
<form action="/pieces" method="POST" role="form">
	<div class="form-group">
		<label for="name">Piece Name:</label>
		<input type="text" name="name" placeholder="Name of the piece of art goes here" class="form-control">
	</div>

	<div class="form-group">
		<label for="image">Piece Image:</label>
		<input type="text" name="image" placeholder="Image url goes here" class="form-control">
	</div>

	<div class="form-group">
		<label for="firstName">Artist:</label>
		<label for="creators">First Name:</label>
		<input type="text" name="firstName" placeholder="First name here" class="form-control">
		<label for="creators">Last Name:</label>
		<input type="text" name="lastName" placeholder="Last name here" class="form-control">
	</div>

	<div class="form-group">
		<label for="name">Birthyear:</label>
		<input type="number" name="birthYear" placeholder="birthyear" class="form-control">
		<input type="number" name="deathYear" placeholder="deathyear" class="form-control">
	</div>

	<div class="form-group">
		<label for="creatorimage">Artist Image:</label>
		<input type="text" name="creatorimage" placeholder="Artist image url here" class="form-control">
	</div>

	<div class="form-group">
    	<label for="museum">Museum:</label>
    	<select class="form-control" name="museum">
	    	<% museums.forEach(museum => { %>
	    		<option value="<%= museum.id %>"><%= museum.name %></option>
	    	<% }); %>
   		</select>
  	</div>
  	<button type="submit" class="btn btn-primary">Add Art Piece to Museum</button>
</form>